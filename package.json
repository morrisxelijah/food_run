{
  "name": "food_run",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "npm run type-check && vite build && npm run build:server",
    "build:server": "tsc --project tsconfig.server.json",
    "dev:server": "nodemon --watch server --ext ts --exec \"ts-node -P tsconfig.server.json server/server.ts\"",
    "dev:client": "vite --host",
    "dev": "npm run type-check && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start": "NODE_ENV=production node server-build/server.js",
    "test": "vitest"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.2",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "supabase": "^2.65.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  }
}
